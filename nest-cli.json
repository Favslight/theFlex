{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.hbs",
        "outDir": "dist"
      },
      {
        "include": "email/templates/**/*",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  },
  "generateOptions": {
    "spec": false
  }
}
